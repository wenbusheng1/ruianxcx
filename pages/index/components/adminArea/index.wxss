  margin-bottom: 10px;
  display: flex;
}

.list .left {
  width: 93px;
  height: 74px;
}

.list .left image {
  border-radius: 4px;
  width: 100%;
  height: 100%;
}

.right {
  width: 223px;
  margin-left: 12px;
}

.right h3 {
  color: #000;
  font-size: 16px;
  line-height: 22px;
