/* pages/index/components/select/index.wxss */
.select_banner {
  box-sizing: border-box;
  padding: 0 30rpx;
  margin: 24rpx 0 30rpx 0;
}

.select_list {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 50rpx;
}
.select_nav {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.select_nav__icon {
  width:90rpx;
  height: 88rpx;
}
.select_nav_title {
  display: inline-block;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #333;
}

/* 地名遗产-开始 */
.select_heritage {
  margin: 24rpx 0;
}
.heritage_head {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 64rpx;
}
.heritage_hg {
  width: 198rpx;
  height: 62rpx;
}
.heritage_more {
  position: absolute;
  top: 50%;
  margin-top: -16rpx;
  right: 24rpx;
  width: 68rpx;
  height: 32rpx;
}
.heritage_list {
  display: flex;
  margin-top: 24rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 132rpx;
}
.heritage_list__item {
  position: relative;
  min-width: 140rpx;
  height: 132rpx;
  margin-right: 24rpx;
}
.heritage_list__img {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.heritage_list__title {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 38rpx;
  background-color: rgba(#000, 0.4);
  color: white;
  font-size: 24rpx;
  text-align: center;
}
/* 地名遗产-结束 */

/* 地名文化-开始 */
.culture_list {
  display: block;
  box-sizing: border-box;
  padding: 24rpx 30rpx;
}
.culture_list_item {
  height: 162rpx;
  display: flex;
  margin-bottom: 20rpx;
}
.culture_list_tg {
  width: 188rpx;
  height: 140rpx;
  margin-right: 10rpx;
  border-radius: 5px;
}
.culture_list-title {
  display: inline-block;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  font-weight: 700;
}
.culture_list-right {
  flex: 1;
}
.culture_list_content {
  font-size: 24rpx;
  color: #333;
  line-height: 34rpx;
}
.culture_list_tag {
  margin-top: 14rpx;
  display: block;
  width: 80rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background-color: #7CC5FC;
  font-size: 20rpx;
  color: #fff;
  border-radius: 8rpx;
}