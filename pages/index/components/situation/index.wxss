/* pages/index/components/adminArea/index.wxss */
.wrapper {
  box-sizing: border-box;
  padding: 15px 22px 0 16px;
}

.list {
  margin-bottom: 10px;
  display: flex;
}

.list .left {
  width: 93px;
  height: 74px;
}

.list .left image {
  border-radius: 4px;
  width: 100%;
  height: 100%;
}

.right {
  width: 223px;
  margin-left: 12px;
}

.right h3 {
  color: #000;
  font-size: 16px;
  line-height: 22px;
  height: 22px;
}

.showFoot {
  margin-top: 6px;
  line-height: 20px;
}

.right p {
  display: block;
  margin-top: 4px;
  color: #666;
  font-size: 14px;
  line-height: 15px;
  height: 20px;
}

.foot {
  margin-top: 13px;
  display: flex;
  height: 15px;
  align-items: center;
}

.foot .img {
  display: flex;
  align-items: center;
}

.foot image {
  width: 15px;
  height: 15px;
}

.praise {
  color: #bfbfbf;
  font-size: 12px;
  line-height: 15px;
  margin-left: 2px;
}

.icon {
  margin-left: auto;
}

.foot span {
  color: #bfbfbf;
  font-size: 12px;
  line-height: 17px;
  margin-left: 2px;
}

.views {
  margin-left: 4px;
}